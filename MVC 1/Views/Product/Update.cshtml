@model Products
@{
    ViewBag.Title = "Update";
}

<div class="container">
    <div><h2>@Html.Raw(ViewBag.Message)</h2></div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            @using (Html.BeginForm("Update", "Product", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.ProductID)
                <div class="form-group">
                    <label for="ProductName">Product Name</label>
                    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control", placeholder = "Product Name" })
                </div>
                <div class="form-group">
                    <label for="UnitsInStock">Stok</label>
                    @Html.TextBoxFor(x => x.UnitsInStock, new { @class = "form-control", placeholder = "Stok" })
                </div>
                <button type="submit" class="btn btn-warning">Update</button>
                <button type="reset" class="btn btn-default">Reset</button>
            }
        </div>
    </div>
</div>