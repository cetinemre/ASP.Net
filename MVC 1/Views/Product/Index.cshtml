@model List<Products>
@{
    ViewBag.Title = "Ürünler";
}
@using (Html.BeginForm("Add", "Product", FormMethod.Post, new { @class = "form-inline" }))
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                @Html.TextBox("Urun Adi", "", new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                @Html.TextBox("Stok", "", new { @class = "form-control" })
            </div>
            <input type="submit" value="Ürün Ekle" class="btn btn-info" />
        </div>
    </div>
}

<table class="table table-responsive table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>ProductName</th>
            <th>UnitInStock</th>
            @*<th>Product Count</th>*@
            <th>Detail</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var current = Model[i];
            <tr>
                <th>@(i + 1)</th>
                <td>@current.ProductName</td>
                <td>@current.UnitsInStock</td>
                @*<td>@current.Products.Count</td>*@
                <td>
                    <a href="@Url.Action("Detail", "Product", new {id = current.ProductID})" class="btn btn-success">
                        Detail
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("Delete", "Product", new {id = current.ProductID})" class="btn btn-danger">
                        Delete
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("Update", "Product", new {id = current.ProductID})" class="btn btn-warning">
                        Update
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>