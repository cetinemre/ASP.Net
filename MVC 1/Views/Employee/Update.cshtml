@model Employees
@{
    ViewBag.Title = "Update";
}

<div class="container">
    <div><h2>@Html.Raw(ViewBag.Message)</h2></div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            @using (Html.BeginForm("Update", "Employee", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.EmployeeID)
                <div class="form-group">
                    <label for="FirstName">First Name</label>
                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", placeholder = "First Name" })
                </div>
                <div class="form-group">
                    <label for="LastName">Last Name</label>
                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", placeholder = "Last Name" })
                </div>
                <button type="submit" class="btn btn-warning">Update</button>
                <button type="reset" class="btn btn-default">Reset</button>
            }
        </div>
    </div>
</div>